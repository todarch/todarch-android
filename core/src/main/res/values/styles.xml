<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Form" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Form.Email">
        <item name="android:hint">@string/email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Text.Form.Password">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>